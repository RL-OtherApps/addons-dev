<odoo>
    <record id='fleet_vehicle_wizard_view_form' model='ir.ui.view'>
        <field name="name">driving.data.wizard.form</field>
        <field name="model">driving.data.wizard</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <p><strong> Upload an '*.xml' file to be parsed into Drivers Data </strong></p>
                    <group>
                        <group name="group_general">
                            <field name="xml_data" required="1"/>
                            <!--<field name="text_data"/>-->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="apply" string="Create" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

<odoo>
        <record id="view_pos_table_qrcode_wizard" model="ir.ui.view">
            <field name="name">pos.table.qrcode.wizard.form</field>
            <field name="model">pos.table.qrcode.wizard</field>
            <field name="arch" type="xml">
                <form string="QR Code">
                    <group>
                        <field name="floor_id" colspan="4" string="Floor" />
                        <field name="quantity" colspan="4" string="Quantity" />
                    </group>
                    <group>
                        <field name="table_ids" colspan="4" nolabel="1" attrs="{'invisible': [('floor_id', '=', False)], 'required': [('floor_id', '!=', False)]}"/>
                    </group>
                    <footer>
                        <button name="generate_qrcode" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_pos_table_qrcode_wizard" model="ir.actions.act_window">
        <field name="name">QR Code</field>
        <field name="res_model">pos.table.qrcode.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_pos_table_qrcode_wizard" name="QR Code" action="action_pos_table_qrcode_wizard" parent="pos_wechat_miniprogram.menu_pos_miniprogram_order" sequence="3"/>

</odoo>

<templates id="pos_esign_request_template" xml:space="preserve">

    <t t-name="ESignButton">
        <span class='button esign'>
            E-Sign
            <i class="fas fa-signature"></i>
        </span>
    </t>

    <t t-extend="PaymentScreenWidget">
        <t t-jquery="span.button.next" t-operation="before">
            <t t-call="ESignButton"/>
        </t>
    </t>

    <t t-extend="ClientListScreenWidget">
        <t t-jquery="table.client-list tr" t-operation="append">
            <th id="client-list-esign">E-Sign</th>
        </t>
        <t t-jquery=".button.next" t-operation="before">
            <t t-call="ESignButton"/>
        </t>
    </t>

    <t t-extend="ClientLine">
        <t t-jquery="tr.client-line" t-operation="append">
            <td class="esign">
                <t t-esc='!!(partner.sign_attachment_id) &amp;&amp; "&#10004;" || ""'/>
            </td>
        </t>
    </t>
</templates>
